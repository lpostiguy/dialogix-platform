{
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    },
    {
      "src": "api/index.js",
      "use": "@vercel/node"
    }
  ],
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/index.js" },
    {
      "source": "/((?!api/.*|assets/.*|.*\\..*).*)",
      "destination": "/index.html"
    },
    { "source": "/(.*)", "destination": "/$1" }
  ]
}
